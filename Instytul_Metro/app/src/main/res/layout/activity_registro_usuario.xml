<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.appsthergo.instytul.metro.appsthergoappname.RegistroUsuarioActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layContent_msj_inicial"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Gracias por instalar nuestra aplicación!"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/txt_msj_inicial"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="¡Pulsa en la pantalla para continuar!"
            android:id="@+id/txt_pulsar_pantalla"
            android:textColor="#333333"
            android:layout_marginTop="50dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- PREGUNTA 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layContent_pregunta1"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Eres hombre o mujer?"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/txt_pregunta1" />



            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hombre"
                android:id="@+id/Btn_Hombre"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:padding="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Btn_Mujer"
                android:text="Mujer"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:padding="20dp"/>

    </LinearLayout>


    <!-- PREGUNTA 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layContent_pregunta2"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuantos años tienes?"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/txt_pregunta2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/layContent_pregunta2_edades"
                android:visibility="visible">

            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</LinearLayout>
